{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "core/src/*"
      ],
      "@gui/*": [
        "gui/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
